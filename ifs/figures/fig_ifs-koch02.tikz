% Le programme rÃÂÃÂ©cursif
\newcommand{\ifs}[2]{% #1 the counter, #2 the instructions
                          \ifnum #1 < 0% stop now
                          #2%
                          %\relax% Relax, max, on ne fait rien, c'est terminÃÂÃÂ©.
                          \else%
                          \count255=#1%
                          \advance\count255 by -1%
                          \simone
                             \ifs{\number\count255}{#2};                          
                          \end{scope};

                          \simtwo
                             \ifs{\number\count255}{#2};                          
                          \end{scope};

                          \simthree
                             \ifs{\number\count255}{#2};                          
                          \end{scope};

                          \simfour
                             \ifs{\number\count255}{#2};                          
                          \end{scope};
                          \fi%
}

